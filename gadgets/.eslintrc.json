{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "mw": "readonly",
    "mediaWiki": "readonly",
    "OO": "readonly"
  },
  "overrides": [
    {
      "files": [
        "ImportButton/**",
        "Tab/**"
      ],
      "extends": [
        "wikimedia/client",
        "wikimedia/jquery"
      ],
      "rules": {
        "indent": "off",
        "@stylistic/indent": ["error", 4],  // 4 spaces
        "comma-dangle": [
          "error",
          {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "only-multiline"
          }
        ]
      }
    },
    {
      // files that have i18n logic injected by the FandoomUtilsI18nInjector Vite plugin
      "files": [
        "AjaxBatchDelete/**",
        "AjaxBatchRedirect/**",
        "AjaxBatchUndelete/**",
        "AjaxUndo/**",
        "Countdown/**",
        "HTMLAudioPlayer5/**",
        "MassCategorization/**",
        "MassNullEdit/**",
        "MassProtect/**",
        "MassRename/**",
        "PageRenameAuto-update/**",
        "PreloadTemplates/**",
        "ViewSource/**"
      ],
      "globals": {
        "getI18nLoader": "readonly",
        "getFallbackMessages": "readonly",
        "prepareI18n": "readonly",
        "INJECT_FANDOM_UTILS_I18N": "readonly"
      }
    }
  ]
}
